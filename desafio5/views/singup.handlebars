
<div class="uk-padding-large uk-child-width-1-1" uk-grid>
  <h3>Please, register!</h3>
  <form action="http://localhost:8080/api/sessions/singup" method="post">
    <div class="uk-margin">
      <div class="uk-inline">
        
        <input class="uk-input" name="firstname" type="text" placeholder="Name">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <input name="lastname" class="uk-input" type="text" placeholder="Lastname">
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <input name="address" class="uk-input" type="text" placeholder="Address">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <input name="email" class="uk-input" type="text" placeholder="E-mail">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <input name="age" class="uk-input" type="text" placeholder="Age">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        sex
        <select name="sex" class="uk-select" aria-label="Select">
            <option>male</option>
            <option>female</option>
        </select>
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <input name="password" class="uk-input" type="password" placeholder="password">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <input name="password2" class="uk-input" type="password" placeholder="confirm password">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <span>Do you already have an account? <a href="/login">Log-in!</a></span>
      </div>
    </div>
    
    {{#if error}}
      <div class="uk-margin">
        <div class="uk-inline">
          <span class="uk-form-danger">{{error}}</span>
        </div>
      </div>
    {{/if}}

    <button class="uk-button uk-button-default">Register!</button>
  </form>
</div>